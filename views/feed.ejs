<%- include('partials/header') -%>



<!-- Highlights -->
<section id="highlights" class="wrapper style3">
  <div class="title">Our Community</div>
  <div class="container">
    <div class="row aln-center">
      
       
          <% for(var i=0; i<posts.length; i++) {%>
            <div class="col-4 col-12-medium">
            <section class="highlight">
              <ul class="actions">
                <li>
                  <a href="/post/<%= posts[i]._id%>">
                    <img class="image fit featured" src="<%= posts[i].image%>">
                  </a>
                </li>
              </ul>
           
          <h3><a href="/post/<%= `${posts[i]._id}`%>"><%=posts[i].title%></a></h3>
          <p><%=posts[i].caption%></p>
          <div class="actions">
            <h5>Likes: <%= posts[i].likes %></h5>
          </div>
          <div class="actions">
            Posted by:<a href="/<%= `getProfile?user= ${posts[i].user.userName}`%>"><%= posts[i].user.userName%>
            </a>
          </div>
              <h4>Comments:</h4>
              <% for(var j=0; j<comments.length; j++) {%>
                  <% if( comments[j].post  == `${posts[i]._id}` ) {%>
                      
                      <p><%= comments[j].comment %></p>
                    
                  <%}%>     
             <%}%>
             <form
             class="actions"
             action="/post/likePost/<%=posts[i]._id%>?_method=PUT"
             method="POST"
           >
             <button class="btn style1 fa fa-heart" type="submit"></button>
           </form>
          <ul class="actions">
            <li><a href="/post/<%= posts[i]._id %>" class="button style1">Comment</a></li>
          </ul>
        </section>
      </div>
          <% } %>
       
      </div>
     
    </div>
  </div>
</section>
           


