<%- include('partials/header') -%>

<section id="intro" class="wrapper style3">
  <div class="title"><%= post.title %></div>
  <!-- <div class="container"> -->

    <div class="container">
      <div class="row justify-content-center mt-5">
        <div class="card p-5">
          <h2></h2>
          <img class="image fit featured" src="<%= post.image%>" />
          <div class="row p-5 justify-content-between">
            <form
              class=""
              action="/post/likePost/<%=post.id%>?_method=PUT"
              method="POST"
            >
              <button class="btn style1 fa fa-heart" type="submit"></button>
            </form>
            <h3 class="col-3">Likes: <%= post.likes %></h3>
            <%if(post.user == user.id){ %>
            <form
              action="/post/deletePost/<%= post.id %>?_method=DELETE"
              method="POST"
              class="col-3"
            >
              <button class="btn style1 fa fa-trash" type="submit"></button>
            </form>
            <form
            action="/post/editPostPage/<%= post.id %>"
          
            class="col-3"
          >
            <button class="btn style1" type="submit">edit</button>
          </form>

            <%}%>
          </div>
        
          <div class="">
            <p><%= post.caption %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
            <h2>Comments:</h2>
            <ul class="row list-unstyled">
              <% for(var i=0; i<comments.length; i++) {%>
                <li class="col-6 ">
                  <h4>"<%= comments[i].comment%>"</h4>
              
                  <form
                  class=""
                  action="/comment/likeComment/<%= comments[i]._id %>?_method=PUT"
                  method="POST"
                  >
                  <button class="btn style1 fa fa-heart" type="submit"></button>
                  </form>
                 <p class="p-3">Comment Likes: <%= comments[i].likes %></p>
               </li>

                <%if(comments[i].user == user.id){ %>
                  <form
                    action="/comment/deleteComment/<%= comments[i]._id %>?_method=DELETE"
                    method="POST"
                    class="col-3"
                  >
                    <button class="btn style1 fa fa-trash" type="submit"></button>
                  </form>
                 <% } %>
              <% } %>
            </ul>
        </div>
    </div>
  </div>
</section>

