<%- include('partials/header') -%>

<section id="highlights" class="wrapper style2">
    <div class="title">Create New Post</div>
      <div class="container">
  
        
          <div class="row mt-5">
              <div class="col-6">
                  <div>
                      <p><strong>User Name</strong>: <%= user.userName %></p>
                      <p><strong>Email</strong>: <%= user.email %></p>
                      
                  </div>
                  <div class="mt-5">
                    <!-- <h2>Add a post</h2> -->
                    <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                        <div class="mb-3">
                            <label for="imgUpload" class="form-label">Image</label>
                            <input type="file" class="form-control" id="imageUpload" name="file">
                        </div>
                      <div class="mb-3">
                          <label for="title" class="form-label">Title</label>
                          <input type="text" class="form-control" id="title" name="title">
                      </div>
                      <div class="mb-3">
                        <label for="caption" class="form-label">Caption</label>
                        <textarea class="form-control" id="caption" name="caption"></textarea>
                      </div>
                   
                      <div class=""></div>
                      <div class="">
                      <button type="submit" class="button style1 large" value="Upload">Submit</button>
                      <div class=""></div>
                      <a href="/logout" class="button style1 large ">Logout</a>
                      </div>
                    </form>
                  </div>
              </div>
              <div class="">
                <div class="">
                  <a class="button style2 large" href="/feed">Return to Feed</a>
                </div>  
              </div>  
            </div>
          </div>
        
    
      </div>
  </section>

<%- include('partials/footer') -%>